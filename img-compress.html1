        .quality-indicator {
            display: flex;
            justify-content: space-between;
            margin-top: 0.5rem;
        }

        .quality-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #e0e5f0;
            transition: var(--transition);
        }

        .quality-dot.active {
            background: var(--success);
        }
